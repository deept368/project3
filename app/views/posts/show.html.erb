<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>

</p>
<strong>By:</strong>
<%= link_to User.find(@post.user_id).name, user_path(User.find(@post.user_id)) %>
<p>

<p>
  <%= @post.body %>
</p>


<ul>
  <li><%= link_to "Edit", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
</ul>

<h2>Comments:</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Comment:</strong>
    <%= link_to comment.body, comment %>
  </p>
  <p>
    <strong>By:</strong>
    <%= link_to User.find(comment.user_id).name, user_path(User.find(comment.user_id)) %>
  </p>
  <p> *************************** </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_with model: [@post, @post.comments.build] do |form| %>
  <p>
    <%= form.label :User_Id %><br>
    <%= form.text_field :user_id %>
  </p>
  <p>
    <%= form.label :Comment %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>


